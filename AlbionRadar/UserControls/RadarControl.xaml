<UserControl x:Class="AlbionRadar.UserControls.RadarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlbionRadar.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="RadarCanvas" Background="Black"  Height="500" Width="500">
            <Canvas.RenderTransform>
                <RotateTransform Angle="-45"  CenterX="250" CenterY="250"/>
            </Canvas.RenderTransform>
        </Canvas>
        <!-- Radar elements will be added here -->
    </Grid>
</UserControl>
